
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.4);
  z-index: 999;
}


.popup-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 60rpx 40rpx; 
  z-index: 1000;
  box-shadow: 0 -4rpx 32rpx rgba(0, 0, 0, 0.12);
  animation: slide-up 0.3s ease-out;
  overflow-y: auto;
  box-sizing: border-box; 
}


@keyframes slide-up {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}


.button-group {
  display: flex;
  flex-direction: column;
  align-items: center; 
  gap: 30rpx; 
  margin-bottom: 60rpx;
}

.function-btn {
  width: 100%;
  height: 90rpx;
  padding: 0 30rpx; 
  background: #f8f9fa;
  border-radius: 12rpx;
  display: flex;
  align-items: center; 
  justify-content: center; 
  text-align: center;
  transition: all 0.3s;
  font-size: 32rpx;
  color: #1f2d3d;
}

.function-btn.active {
  background: #e6f4ff;
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.15);
}


.slider-container {
  margin: 60rpx 0;
  padding: 40rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.option-header {
  font-size: 34rpx;
  font-weight: 500;
  color: #1f2d3d;
  margin-bottom: 40rpx;
  text-align: center;
}

slider {
  height: 40rpx;
  width: 100%;
}

slider .wx-slider-track {
  height: 4rpx;
  background: #e6f4ff;
}

slider .wx-slider-active {
  background: #1890ff;
}

slider .wx-slider-thumb {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #e6f4ff;
  background: #1890ff;
}

.slider-tip {
  font-size: 28rpx;
  color: #64748b;
  text-align: center;
  margin-top: 16rpx;
}


.confirm-btn {
  width: 80%; 
  height: 96rpx; 
  padding: 0 24rpx; 
  font-size: 34rpx; 
  color: #ffffff; 
  background: #007be7; 
  border: none;
  border-radius: 48rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-btn:active{
  color: #e2e2e2;
  box-shadow: inset 0 4rpx 12rpx rgba(24, 144, 255, 0.1); 
  transform: scale(0.98); 
}

