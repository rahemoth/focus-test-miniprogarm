/* pages/home/home.wxss */
/* 整体容器 */
.home-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 0 40rpx;
  background: #f8f9fa;
}

/* 图标 */
.logo {
  width: 320rpx;
  height: 320rpx;
  margin-bottom: 60rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 12, 40, 0.08); 
}

/* 标题组 */
.title {
  font-size: 48rpx; 
  font-weight: 600;
  color: #1f2d3d; 
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 32rpx; 
  color: #64748b;
  margin-bottom: 80rpx;
  text-align: center;
  line-height: 1.5;
}

/* 主按钮（开始测试） */
.primary-btn {
  width: 80%; 
  height: 96rpx;
  padding: 0 24rpx;
  font-size: 34rpx;
  color: #1890ff;
  background: #f0f8ff; 
  border: none; 
  border-radius: 48rpx; 
  box-shadow: 0 6rpx 24rpx rgba(24, 144, 255, 0.15); 
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.primary-btn:active {
  color: #1890ff;
  box-shadow: inset 0 4rpx 12rpx rgba(24, 144, 255, 0.1);
  transform: scale(0.98); 
}

/* 次按钮（开始预测试） */
.secondary-btn {
  width: 80%;
  height: 96rpx;
  margin-top: 30rpx;
  font-size: 34rpx;
  color: #434e59; 
  background: #ffffff;
  border: 2rpx solid #e6f4ff; 
  border-radius: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 12, 40, 0.05);
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.secondary-btn:active {
  color: #555555;
  box-shadow: inset 0 4rpx 12rpx rgba(24, 144, 255, 0.1); 
  transform: scale(0.98); 
}


select-popup {

  --z-index: 1000;
}
    