/* 弹出层样式优化 */
.profile-popup {
  position: fixed;
  inset: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.profile-popup.active {
  opacity: 1;
  visibility: visible;
}

.mask {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.4);
  backdrop-filter: blur(2rpx);
}

.popup-content {
  position: relative;
  background: #fff;
  border-radius: 24rpx;
  width: 90%;
  max-width: 750rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 24rpx 48rpx rgba(0,0,0,0.15);
  transform: scale(0.95);
  transition: transform 0.3s ease;
}

.profile-popup.active .popup-content {
  transform: scale(1);
}

/* 头部样式优化 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.1);
}

.name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-left: 24rpx;
}

.close-btn {
  font-size: 40rpx;
  color: #666;
  background: transparent;
  padding: 0;
  margin: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background 0.2s;
}

.close-btn:active {
  background: #f5f5f5;
}

/* 内容区样式优化 */
.content .item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 1rpx dashed #f0f0f0;
}

.content .item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
  min-width: 100rpx;
  text-align: right;
  margin-right: 24rpx;
  line-height: 1.5;
}

.value {
  font-size: 30rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
  line-height: 1.5;
}
 