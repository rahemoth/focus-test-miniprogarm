<!-- pages/index/index.wxml -->
<view class="container">
  <!-- 纵向排列的按钮 -->
  <view class="button-group">
        <button 
      class="vertical-btn" 
      wx:for="{{buttonList}}" 
      wx:key="index"
      bindtap="handleButtonTap"
      data-index="{{index}}" 
     style="position: relative; left: 0rpx; top: 438rpx">
      <icon type="{{item.icon}}" size="20" /> {{item.text}}
    </button>
  </view>

  <view class="table-container">
  <view class="table-header">选项列表</view>
  <view 
    class="table-row {{selectedRank === index ? 'selected' : ''}}" 
    wx:for="{{optionList}}" 
    wx:key="id"
    data-index="{{index}}"
    bindtap="handleOptionSelect"
  >
    <view class="table-cell">
      <!-- 移除原生 radio 组件 -->
      <view class="custom-radio {{selectedRank === index ? 'checked' : ''}}"></view>
    </view>
    <view class="table-cell">{{item.text}}</view>
  </view>
</view>
</view>