/* 表单按钮容器 */
.form-btns {
  display: flex;
  gap: 30rpx;
  margin: 60rpx 0;
  justify-content: flex-end;
  flex-direction: column;
  align-items: flex-end;
}

/* 禁用图标字体 */
.t-icon {
  display: none !important;
}

/* 替代方案使用内置图标 */
.t-cell__left-icon::before {
  content: '\e7ae';
  font-family: 'weui';
}

/* 授权区域新样式 */
.auth-section {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-tip {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.auth-btn {
  background: none;
  border: 1rpx solid #07c160 !important;
  color: #07c160 !important;
  border-radius: 50rpx;
  padding: 24rpx 80rpx; 
  width: auto; 
  min-width: 400rpx; 
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  line-height: 1.4;
}

.auth-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;

}

/* 调整分割线位置 */
.divider {
  margin: 80rpx 0 160rpx; 
}

.container {
  min-height: 100vh;
  padding-bottom: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.center-container {
  display: flex;
  flex-direction: column;
 
  align-items: center;
  min-height: 100vh;
}

.center-form {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.back-to-login {
  background-color: #ccc;
  color: white;
  border: none;
  border-radius: 5px;
  text-align: center;
  font-size: 30rpx;
  width: 400rpx;
  padding: 24rpx 80rpx;
  margin-top: 5rpx;
}


.gender-selector {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  margin-bottom: 24rpx;
}

.gender-label {
  font-size: 30rpx;
  color: #666;
  width: 80rpx;
  text-align: right;
  margin-right: 24rpx;
  white-space: nowrap;
  font-weight: 900;
}

.radio-group {
  display: flex;
  flex-wrap: nowrap;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-right: 90rpx; 
  white-space: nowrap;
}

.radio-item radio {
  transform: scale(0.8);
  margin-right: 8rpx;
}

.positive-symbol {
  /* 水平居中 */
  text-align: center; 
  
 
  height: 100px; 
  
  /* 垂直靠底部对齐 */
  display: flex;
  align-items: flex-end;
  justify-content: center; 
}