/* 表单按钮容器 */
.form-btns {
  display: flex;
  gap: 30rpx;
  margin: 60rpx 0;
  justify-content: flex-end;
  flex-direction: column;
  align-items: flex-end;
}

/* 禁用图标字体 */
.t-icon {
  display: none !important;
}

/* 替代方案使用内置图标 */
.t-cell__left-icon::before {
  content: '\e7ae'; /* 使用微信原生图标 */
  font-family: 'weui';
}

/* 授权区域新样式 */
.auth-section {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-tip {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.auth-btn {
  background: none;
  border: 1rpx solid #07c160 !important;
  color: #07c160 !important;
  border-radius: 50rpx;
  padding: 24rpx 80rpx; /* 调整左右内边距 */
  width: auto; /* 改为自适应宽度 */
  min-width: 400rpx; /* 设置最小宽度 */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  line-height: 1.4;
}

.auth-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  /* 如果.auth-icon 是用于显示图标，你可能需要进一步调整其样式以确保图标正确显示 */
}

/* 调整分割线位置 */
.divider {
  margin: 80rpx 0 160rpx; /* 增大上下间距 */
}

.container {
  min-height: 100vh;
  padding-bottom: 300rpx; /* 留出底部空间 */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.center-container {
  display: flex;
  flex-direction: column;
  /* 移除 justify-content: center; */
  align-items: center;
  min-height: 100vh;
}

.center-form {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.back-to-login {
  background-color: #ccc;
  color: white;
  border: none;
  border-radius: 5px;
  text-align: center;
  font-size: 30rpx;
  width: 400rpx;
  padding: 24rpx 80rpx;
  margin-top: 5rpx; /* 减小上边距，使按钮更靠近上方按钮 */
}


.gender-selector {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  margin-bottom: 24rpx;
}

.gender-label {
  font-size: 30rpx;
  color: #666;
  width: 80rpx;
  text-align: right;
  margin-right: 24rpx;
  white-space: nowrap;
  font-weight: 900;
}

.radio-group {
  display: flex;
  flex-wrap: nowrap;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-right: 90rpx; /* 恢复右侧间距 */
  white-space: nowrap;
}

.radio-item radio {
  transform: scale(0.8);
  margin-right: 8rpx;
}

.positive-symbol {
  /* 水平居中 */
  text-align: center; 
  
  /* 容器需设置高度，否则垂直对齐无效果 */
  height: 100px; /* 示例高度，可根据实际需求调整 */
  
  /* 垂直靠底部对齐 */
  display: flex;
  align-items: flex-end;
  justify-content: center; /* 可选：若需要水平居中（已通过 text-align 实现，此处可省略） */
}