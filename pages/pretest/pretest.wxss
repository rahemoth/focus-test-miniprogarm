/* 全局样式 */
.page-wrapper {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.swiper-container {
  height: 100%;
}

.test-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 15px;
  box-sizing: border-box;
}

.test-header {
  text-align: center;
  padding: 10px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 10px;
  margin-bottom: 10px;
}

.title {
  font-size: 18px;
  color: #2d3436;
  margin-bottom: 5px;
}

.header-decoration {
  height: 3px;
  width: 80px;
  background: linear-gradient(90deg, #FFA500 0%, #FF6B6B 100%);
  margin: 0 auto;
  border-radius: 2px;
}

.notice_box {
  margin-bottom: 10px;
}

.notice {
  font-size: 12px;
  color: #333;
  text-align: left;
}

.notice text {
  display: block;
  margin-bottom: 5px;
}

/* 表格样式 */
.table-container {
  flex: 1;
  overflow: auto;
  margin: 10px 0;
  border: 1px solid #2374ee;
  border-radius: 8px;
}

table {
  width: 100%;
  border-collapse: collapse;
  table-layout: fixed;
}

.header {
  display: flex;
  justify-content: space-between; /* 使列之间的间距均匀分布 */
  background: #2161eb;
  color: white;
  padding: 8px;
  font-size: 12px;
  text-align: center;
}

.header th {
  flex: 1; /* 每个列占据相同的宽度 */
}

.points-header {
  width: 80px;
  background: #2b5ff0;
}

.cell {
  width: 33.33%; /* 3列 = 每列33.33%宽度 */
  height: 80px; /* 增大高度适应4行 */
  border: 1px solid #ddd;
  text-align: center;
  vertical-align: middle;
  box-sizing: border-box;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cell text {
  font-size: 24px; /* 调整字体大小 */
  color: red; /* 文字颜色 */
}

/* 特殊单元格样式 */
.selected-cell {
  background-color: #74b9ff !important;
}

.current-position {
  border: 2px solid #ff6b6b !important;
  animation: pulse 1.5s infinite;
}

.point-cell {
  background-color: #ffff00 !important;
}

.special-cell {
  background-color: #ff8c00 !important;
}

@keyframes pulse {
  0% { opacity: 0.8; }
  50% { opacity: 1; }
  100% { opacity: 0.8; }
}

/* 阳性符号显示 */
.targets-display, .special-display {
  display: flex;
  justify-content: center;
  margin-top: 5px; /* 调整阳性符号显示的位置 */
}

.points-display, .special-display {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.instruction {
  color: orangered;
  font-size: 12px;
  margin-bottom: 5px;
}

.points-images {
  display: flex;
  gap: 10px;
}

.example-text {
  font-size: 24px; /* 调整字体大小 */
  color: red; /* 文字颜色 */
}

.row-points-indicator {
  background: #f8f9fa;
  padding: 5px;
  width: 80px;
  border-right: 1px solid #dee2e6;
}

.row-points {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5px;
}

/* 操作按钮 */
.control-panel {
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
}

.btn {
  flex: 1;
  margin: 0 5px;
  padding: 10px;
  border-radius: 5px;
  color: white;
  font-size: 14px;
}

.related-btn { background: #4CAF50; }
.unrelated-btn { background:#FF6B6B; }
.invalid-btn { background: #FF9800; }

/* 媒体查询 */
@media (max-width: 768px) {
  .header {
    flex-direction: column;
    align-items: center;
  }

  .header th {
    flex: none;
    width: 100%;
    text-align: center;
    margin-bottom: 5px;
  }

  .points-header {
    width: 100%;
  }

  .cell {
    width: 100%;
    height: auto;
    padding: 10px 0;
  }

  .control-panel {
    flex-direction: column;
    align-items: center;
  }

  .btn {
    flex: none;
    width: 80%;
    margin: 5px 0;
  }
}