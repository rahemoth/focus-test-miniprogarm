/* 页面全局布局：让卡片垂直+水平居中 */
page {
  display: flex;
  flex-direction: column;
  justify-content: center; /* 垂直居中 */
  align-items: center;     /* 水平居中 */
  min-height: 100vh;       /* 占满屏幕高度 */
  background-color: #f5f5f5; /* 浅灰背景，区分卡片 */
}

/* 卡片容器：视觉包裹 + 自适应宽度 */
.plan-card {
  width: 90%;              /* 占屏幕90%宽度 */
  max-width: 600rpx;       /* 最大宽度限制（避免大屏过宽） */
  background: #fff;        /* 白色背景 */
  border-radius: 20rpx;    /* 圆角 */
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); /* 柔和阴影 */
  margin: 30rpx 0;         /* 上下间距，左右由page的align-items居中 */
}

/* 卡片内边距：隔离内容与边框 */
.plan-content {
  padding: 30rpx;
}

/* 信息项：标签和值同行，左对齐 */
.plan-item {
  display: flex;
  align-items: center;     /* 垂直居中 */
  margin-bottom: 20rpx;    /* 项间距 */
}

/* 标签：加粗 + 左对齐 */
.item-label {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-right: 16rpx;     /* 与值的间距 */
}

/* 值：左对齐 + 浅色调 */
.item-value {
  font-size: 28rpx;
  color: #666;
}

/* 计划类型模块：标题+标签 */
.plan-type {
  display: flex;
  align-items: center;     /* 垂直居中 */
  margin-top: 20rpx;       /* 与上方内容的间距 */
}


.plan-type {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.type-title {
  font-size: 32rpx;
  color: #333;
  margin-right: 15rpx;
}

.type-tag {
  position: relative;
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.gradient-tag {
  background: linear-gradient(135deg, #34e89e, #0f3443);
}

.tag-text {
  position: relative;
  z-index: 10;
  font-size: 26rpx;
  font-weight: 500;
  color: white;
  letter-spacing: 1rpx;
}



/* 默认标签（备用） */
.tag-default {
  background: #e5e5e5;
  color: #999;

}
.btn-group {
  display: flex;
  align-items: center;
  justify-content: center; 
  gap: 20rpx;
  margin-top: 300rpx;
}

.btn {
  width: 200rpx; /* 按钮宽度，按需调整 */
  height: 80rpx;
  line-height: 80rpx; /* 文字垂直居中 */
  text-align: center;
  border-radius: 40rpx; /* 圆角（高度的一半） */
  font-size: 28rpx;
}

/* 左侧按钮：黑底白字 */
.view-btn {
  background: #000;
  color: #fff;
}

/* 右侧按钮：白底黑字 + 黑边框 */
.share-btn {
  background: #fff;
  color: #000;
  border: 2rpx solid #000;
  padding: 0;
  margin: 0;
  border-radius: 40rpx;
}