/* 页面全局布局：让卡片垂直+水平居中 */
page {
  display: flex;
  flex-direction: column;
  justify-content: center; 
  align-items: center;     
  min-height: 100vh;     
  background-color: #f5f5f5; 
}


.plan-card {
  width: 90%;             
  max-width: 600rpx;     
  background: #fff;      
  border-radius: 20rpx;   
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); 
  margin: 30rpx 0;       
}


.plan-content {
  padding: 30rpx;
}


.plan-item {
  display: flex;
  align-items: center;   
  margin-bottom: 20rpx;   
}


.item-label {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-right: 16rpx;     
}


.item-value {
  font-size: 28rpx;
  color: #666;
}


.plan-type {
  display: flex;
  align-items: center;     
  margin-top: 20rpx;      
}


.plan-type {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.type-title {
  font-size: 32rpx;
  color: #333;
  margin-right: 15rpx;
}

.type-tag {
  position: relative;
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.gradient-tag {
  background: linear-gradient(135deg, #34e89e, #0f3443);
}

.tag-text {
  position: relative;
  z-index: 10;
  font-size: 26rpx;
  font-weight: 500;
  color: white;
  letter-spacing: 1rpx;
}



/* 默认标签（备用） */
.tag-default {
  background: #e5e5e5;
  color: #999;

}
.btn-group {
  display: flex;
  align-items: center;
  justify-content: center; 
  gap: 20rpx;
  margin-top: 300rpx;
}

.btn {
  width: 200rpx; 
  height: 80rpx;
  line-height: 80rpx; 
  text-align: center;
  border-radius: 40rpx; 
  font-size: 28rpx;
}


.view-btn {
  background: #000;
  color: #fff;
}


.share-btn {
  background: #fff;
  color: #000;
  border: 2rpx solid #000;
  padding: 0;
  margin: 0;
  border-radius: 40rpx;
}