/* pages/index/index.wxss */
/* 页面级适配（确保容器撑满屏幕） */
page {
  height: 100vh;
  margin: 0;
  background-color: #F0F0F0;
}

.container {
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100%; 
  box-sizing: border-box;
}

/* 通用卡片样式 */
.card {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  width: 100%;
  max-width: 600rpx; 
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

/* 深色卡片（智商模块） */
.black-card {
  background-color: #2E2E2E;
  color: #FFFFFF;
}

/* 浅色卡片（同龄人、用时模块） */
.gray-card {
  background-color: #FFFFFF; 
  color: #333333;
}

/* 图标容器 */
.card-icon {
  margin-right: 20rpx;
}

/* 文字内容容器 */
.card-content {
  flex: 1;
}

/* 标题样式 */
.card-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

/* 描述文字样式 */
.card-desc {
  font-size: 24rpx;
  line-height: 1.5;
}

/* 图标颜色适配 */
.black-card .card-icon icon {
  color: #FFFFFF;
}
.gray-card .card-icon icon {
  color: #333333;
}


/* 按钮容器样式 */
.button-container {
  width: 100%;
  margin-top: 40rpx;
  text-align: center;
}

/* 按钮样式 */
.btn {
  padding: 16rpx 48rpx;
  font-size: 28rpx;
  border-radius: 24rpx;
  background-color: #3b3b3b;
  color: #FFFFFF;
  border: none;
}
